---
import FaultyTerminal from '../components/FaultyTerminal';

const trabajos = [
    {
        title: "Desarrollador Web Frontend",
        description: "Trabaje en triario como desarrollador colaborando en el desarrollo de TalksPro, una plataforma de comunicacion multicanal, y tambien implemente un creador de cotizaciones con HubSpot. ",
        company: "Triario",
        date: "Junio 2023 - Octubre 2024",
        location: "Medellin, Colombia"
    },
    {
        title: "CTO y Desarrollador Full Stack Anomaly Studio",
        description: "Lideré el equipo de desarrollo y diseñé la arquitectura de software para proyectos web, incluyendo la creación de una plataforma de gestión de proyectos y un sistema de reservas para clientes.",
        company: "Anomaly Studio",
        date: "Junio 2024 - Febrero 2025",
        location: "Medellin, Colombia"
    },
    {
        title: "Desarrollador Web Freelancer",
        description: "Trabajo como freelancer desarrollando sitios web, e-commerce, plugin para wordpress, etc",
        company: "Freelancer",
        date: "Febrero 2025 - Presente",
        location: "Medellin, Colombia"
    },
    {
        title: "Analista de Infraestructura TI",
        description: "Analista de infraestructura TI en SoftCaribbean, gestionando redes, servidores y soporte tecnico en temrinos de infraestructura.",
        company: "SoftCaribbean",
        date: "Enero 2026 - Presente",
        location: "Envigado, Colombia"
    }
]
---

<section class="bg-[#03193FFF] py-16 px-4 relative min-h-screen" id="trabajos">
    <div class="absolute inset-0 z-0">
        <FaultyTerminal
            scale={1.5}
            gridMul={[2, 1]}
            digitSize={1.2}
            timeScale={0.5}
            pause={false}
            scanlineIntensity={0.5}
            glitchAmount={1}
            flickerAmount={1}
            noiseAmp={1}
            chromaticAberration={0}
            dither={0}
            curvature={0.1}
            tint="#a3b0f0"
            mouseReact
            mouseStrength={0.5}
            pageLoadAnimation
            brightness={0.3}
            client:only="react"
        />
    </div>

    <div class="relative z-10">
        <h1 class="text-white text-5xl font-extrabold mb-12">Trabajos</h1>
    <div class="flex flex-col md:flex-row md:flex-wrap gap-10 justify-center items-start">
        {trabajos.map(trabajo => (
            <div class="relative bg-blue-900 border-2 border-white rounded-2xl p-0 w-full max-w-xl md:w-[32rem] shadow-lg transition-transform hover:scale-105">
                {/* "Ventana" superior estilo navegador */}
                <div class="flex items-center gap-2 px-6 pt-4 pb-2 border-b-2 border-white">
                    <span class="w-3 h-3 rounded-full bg-white inline-block"></span>
                    <span class="w-3 h-3 rounded-full bg-white/60 inline-block"></span>
                    <span class="w-3 h-3 rounded-full bg-white/30 inline-block"></span>
                </div>
                <div class="p-6">
                    <h2 class="text-2xl font-extrabold text-white mb-2">{trabajo.title}</h2>
                    <div class="flex flex-wrap items-center gap-2 mb-2">
                        <span class="text-base font-semibold text-[#e0d6f6]">{trabajo.company}</span>
                        <span class="text-xs text-[#cbbbe2]">{trabajo.date}</span>
                    </div>
                    <p class="text-[#e0d6f6] mb-4">{trabajo.description}</p>
                    <div class="flex items-center text-sm text-[#cbbbe2]">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 12.414a4 4 0 10-1.414 1.414l4.243 4.243a1 1 0 001.414-1.414z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                        {trabajo.location}
                    </div>
                </div>
            </div>
        ))}
        </div>
    </div>
</section>